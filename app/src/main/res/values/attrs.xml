<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircularProgress">
        <attr name="showText" format="boolean|reference" />

        <attr name="bgColor" format="color|reference" />

        <attr name="bgStrokeWidth" format="dimension|reference" />

        <attr name="progressColor" format="color|reference" />

        <attr name="startAngle" format="enum">
            <enum name="Right" value="0" />
            <enum name="Bottom" value="90" />
            <enum name="left" value="180" />
            <enum name="top" value="270" />
        </attr>
        <attr name="progressDirection" format="enum">
            <enum name="WithClockWise" value="1" />
            <enum name="AntiClockWise" value="-1" />
        </attr>

        <attr name="squareCap" format="boolean|reference" />

        <attr name="progressStrokeWidth" format="dimension|reference" />

        <attr name="android:textColor" />

        <attr name="android:textSize" />

        <attr name="android:text" />

        <attr name="max" format="integer|reference" />

        <attr name="showDecimals" format="boolean|reference" />

        <attr name="showPercentage" format="boolean|reference" />

        <attr name="circleBg" format="color|reference" />

    </declare-styleable>
</resources>