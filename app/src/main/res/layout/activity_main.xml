<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_15"
    tools:context=".MainActivity">


    <com.linkdev.circleprogress.CircularProgress
        android:id="@+id/progressCircular"
        android:layout_width="@dimen/circle_width"
        android:layout_height="@dimen/circle_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/margin_20"
        app:innerCircleBackground="@color/circleBg"
        app:max="@integer/max"
        app:outerStrokeColor="@color/gray"
        app:outerStrokeThickness="1dp"
        app:progress="@integer/progress"
        app:progressDirection="Clockwise"
        app:progressRoundedEnd="false"
        app:progressStrokeColor="@color/red"
        app:progressStrokeThickness="@dimen/stroke_5"
        app:showDecimalZero="false"
        app:startAngle="Top"
        app:text="hello\nworld"
        app:textColor="@color/black"
        app:textSize="@dimen/fontMedium" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtMax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20"
                android:hint="@string/max"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/edtProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_20"
                android:hint="@string/progress"
                android:inputType="numberDecimal" />

            <LinearLayout
                android:layout_marginBottom="@dimen/margin_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:text="@string/startAngle" />

                    <Spinner
                        android:id="@+id/spStartAngle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:text="@string/progressDirection" />

                    <Spinner
                        android:id="@+id/spDirection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <TextView
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/strokeThickness" />

            <SeekBar
                android:id="@+id/sbStokeThickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:max="@integer/maxThick"
                android:min="@integer/minThick"
                android:progress="1" />

            <TextView
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/progressThickness" />

            <SeekBar
                android:id="@+id/sbProgressThickness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:max="@integer/maxThick"
                android:min="@integer/minThick"
                android:progress="5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/chkRounded"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_weight="1"
                    android:text="@string/rounded" />

                <CheckBox
                    android:id="@+id/chkShowDecimal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:layout_weight="1"
                    android:text="@string/showDecimal" />
            </LinearLayout>


            <TextView
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/textDisplay" />

            <RadioGroup
                android:id="@+id/rdgrpTextDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdbtnNoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="@string/noText" />

                <RadioButton
                    android:id="@+id/rdbtnPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:checked="true"
                    android:text="@string/percentage" />

                <RadioButton
                    android:id="@+id/rdbtnProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="@string/progress" />

                <RadioButton
                    android:id="@+id/rdbtnProvidiedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="@string/providedText" />
            </RadioGroup>

            <TextView
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/textSize" />

            <SeekBar
                android:id="@+id/sbFontSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:max="@integer/maxFont"
                android:min="@integer/minFont"
                android:progress="20" />

            <EditText
                android:id="@+id/edtText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/progressColor" />

            <RadioGroup
                android:id="@+id/rdgrpProgressColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdbtnRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="@string/red" />

                <RadioButton
                    android:id="@+id/rdbtnGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="@string/green" />

            </RadioGroup>

            <TextView
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/strokeColor" />

            <RadioGroup
                android:id="@+id/rdgrpStrokeColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdbtnYellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="@string/yellow" />

                <RadioButton
                    android:id="@+id/rdbtnCyan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="@string/cyan" />

            </RadioGroup>

            <TextView
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="@string/circleBackGround" />

            <RadioGroup
                android:id="@+id/rdgrpBackgroundCircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdbtnBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="@string/blue" />

                <RadioButton
                    android:id="@+id/rdbtnMagneta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:text="@string/magneta" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</LinearLayout>